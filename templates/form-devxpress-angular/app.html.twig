{% extends 'spa.html.twig' %}

{% block head %}
    <meta charset="utf-8">
    <base href="/demo/form/devxpress-angular">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">

    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<!-- preload JS -->
<link rel="preload" href="{{ asset('dist-ng/devxpress/runtime.js') }}" as="script"/>
<link rel="preload" href="{{ asset("dist-ng/devxpress/polyfills.js") }}" as="script"/>
<link rel="preload" href="{{ asset("dist-ng/devxpress/styles.js") }}" as="script"/>
<link rel="preload" href="{{ asset("dist-ng/devxpress/vendor.js") }}" as="script"/>
<link rel="preload" href="{{ asset("dist-ng/devxpress/main.js") }}" as="script"/>
{% endblock %}

{% block body %}
    <app-root></app-root>
{% endblock %}

{% block javascripts %}
    <!-- HardCoded part whereas it should be generated with ngcli build system: it should be better to serve the  -->
    <script type="text/javascript" src="/dist-ng/devxpress/runtime.js"></script>
    <script type="text/javascript" src="/dist-ng/devxpress/polyfills.js"></script><!-- generate Zone already loaded. Error -->
    <script type="text/javascript" src="/dist-ng/devxpress/styles.js"></script>
    <script type="text/javascript" src="/dist-ng/devxpress/vendor.js"></script>
    <script type="text/javascript" src="/dist-ng/devxpress/main.js"></script>
{%  endblock %}
